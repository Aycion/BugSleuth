{
  "compilerOptions": {
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "jsx": "react",
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "jsxFactory": "h",
    "noEmitHelpers": true,
    "importHelpers": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
